<p id="notice"><%= notice %></p>

<section class="global-occupancy">
  <h2>Global Occupancy</h2>
  <div class="global-occupancy-box">
    <h3>Week</h3>
    <span id="global_week_rate" class="global-occupancy-rate"><%= @global_week_rate %></span><br/>
    <small>in the next 7 days</small>
  </div>
  <div class="global-occupancy-box">
    <h3>Month</h3>
    <span id="global_month_rate"  class="global-occupancy-rate"><%= @global_month_rate %></span><br/>
    <small>in the next 30 days</small>
  </div>
</section>

<section class="listing">
  <h2>Rooms</h2>

  <table>
    <thead>
      <tr>
        <th>Code</th>
        <th>Capacity</th>
        <th colspan="2" width="30%">Occupancy (Week / Month)</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% if @rooms.any? %>
        <% @rooms.each do |room| %>
          <tr>
            <td><%= room.code %></td>
            <td><%= pluralize(room.capacity, 'person', 'people') %></td>
            <td><%= room.week_occupancy_rate %></td>
            <td><%= room.month_occupancy_rate %></td>
            <td><%= link_to 'Show', room %></td>
            <td><%= link_to 'Edit', edit_room_path(room) %></td>
            <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      <% else %>
        <td colspan="7">There are no rooms in the Guava Inn yet.</td>
      <% end %>
    </tbody>
  </table>
</section>

